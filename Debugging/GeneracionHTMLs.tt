<#+
	private void htmlHome(Clase clase, String textoEnriquecido){
		WriteLine("<html>");
		WriteLine("\t<head>");
		WriteLine("\t\t<title>" + clase.NombreClase + "Home</title>");
		WriteLine("\t</head>");
		WriteLine("\t<body>");
		WriteLine("\t\t<div style='border:1px solid black; margin:20px'>");
		Write("\t\t<form name='" + clase.NombreClase + "'");
		if(clase is ClaseEnriquecida){
			ClaseEnriquecida claseE = (ClaseEnriquecida) clase;
			EstiloClase estiloC = null;
			EstiloOperacion estiloO = null;
			foreach (EstiloOperacion Eop in claseE.EstiloOperacioned){
				if(Eop is EstiloClase){
					estiloC = (EstiloClase) Eop;
				}
				if(Eop is EstiloOperacion){
					estiloO = Eop;
				}
			}
			String colorFondo = estiloC.ColorFondo;
			String colorLetra = estiloC.ColorLetra;
			String font = estiloC.TipoLetra.ToString();
			String alineacion = estiloC.Alineacion.ToString();
			Write("style='background-color:#" + colorFondo +";color:#" + colorLetra + ";font-family:" + font + ";text-align:" + alineacion + ";'>\n");
			WriteLine("\t\t\t<h1>" + claseE.NombreClase + "</h1>");
			String colorButton = estiloO.ColorLetra;
			String fontButton = estiloO.TipoLetra.ToString();
			Write("\t\t\t<button style='color:#" + colorButton + ";font-family:" + fontButton + "'> <a href=\"./" + claseE.NombreClase + textoEnriquecido + "Alta" +".html\">Alta</a> </button>\n");
			Write("\t\t\t<button style='color:#" + colorButton + ";font-family:" + fontButton + "'> <a href=\"./" + claseE.NombreClase + textoEnriquecido + "Listado" +".html\">Alta</a> </button>\n");
		} else {
			Write("style='background-color:#00aabb;color:#000000;font-family:Arial;text-align:center;'>\n");
			WriteLine("\t\t\t<h1>" + clase.NombreClase + "</h1>");
			Write("\t\t\t<button style='color:#000000;font-family:Arial'> <a href=\"./"  + clase.NombreClase + textoEnriquecido + "Alta" + "\">Alta</a> </button>\n");
			Write("\t\t\t<button style='color:#000000;font-family:Arial'> <a href=\"./"  + clase.NombreClase + textoEnriquecido + "Listado" + "\">Alta</a> </button>\n");
		}
		WriteLine("\t\t</form>");
		WriteLine("\t\t</div>");
		WriteLine("\t</body>");
		WriteLine("</html>");
	}
