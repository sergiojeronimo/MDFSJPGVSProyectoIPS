		WriteLine("\t</head>");
		WriteLine("\t<body>");
		WriteLine("\t\t<div style='border:1px solid black; margin:20px'>");
		if(clase is ClaseEnriquecida){
			ClaseEnriquecida claseE = (ClaseEnriquecida) clase;
			EstiloClase estiloC = null;
			EstiloOperacion estiloO = null;
			EstiloAtributo estiloA = null;
			foreach (EstiloOperacion Eop in claseE.EstiloOperacioned){
				if(Eop is EstiloClase){
					estiloC = (EstiloClase) Eop;
				}
				if(Eop is EstiloAtributo){
					estiloA = (EstiloAtributo) Eop;
				}
				if(Eop is EstiloOperacion){
					estiloO = Eop;
				}
			}
			String colorFondo = estiloC.ColorFondo;
			String colorLetra = estiloC.ColorLetra;
			String font = estiloC.TipoLetra.ToString();
			String alineacion = estiloC.Alineacion.ToString();
			WriteLine("\t\t<p style='background-color:#" + colorFondo +";color:#" + colorLetra + ";font-family:" + font + ";text-align:" + alineacion + "'> Alta "+ clase.NombreClase+"</p>");
			Write("\t\t<form name='" + clase.NombreClase + "'");
			Write("style='background-color:#" + colorFondo +";color:#" + colorLetra + ";font-family:" + font + ";text-align:" + alineacion + ";'>\n");
			String colorA = estiloA.ColorLetra;
			String fontA = estiloA.TipoLetra.ToString();
			WriteLine("\t\t\t<table>");
			foreach (Atributo atr in claseE.Atributo){
				String nombreAtr = char.ToUpper(atr.Nombre.ToLower()[0]) + atr.Nombre.ToLower().Substring(1);
				WriteLine("\t\t\t\t<tr><td style='color:#"+ colorA +";font-family:"+ fontA +";'>"+ nombreAtr +": <input type='text' id='"+ atr.Nombre +"'></td></tr>");
			}
			WriteLine("\t\t\t</table>");
			String colorButton = estiloO.ColorLetra;
			String fontButton = estiloO.TipoLetra.ToString();
			Write("\t\t\t<button style='color:#" + colorButton + ";font-family:" + fontButton + "'> <a href=\"./" + claseE.NombreClase + textoEnriquecido + ".html\">Guardar</a> </button>\n");
			Write("\t\t\t<button style='color:#" + colorButton + ";font-family:" + fontButton + "'> <a href=\"./" + claseE.NombreClase + textoEnriquecido + ".html\"> Volver</a> </button>\n");
		} else {
			WriteLine("\t\t<p style='background-color: #00aabb;color:#000000;font-weight:bold; font-family:Arial; text-align:center'> Alta "+ clase.NombreClase+"</p>");
			Write("\t\t<form name='" + clase.NombreClase + "'");
			Write("style='background-color:#00aabb;color:#000000;font-family:Arial;text-align:center;'>\n");
			WriteLine("\t\t\t<table>");
			foreach (Atributo atr in clase.Atributo){
				String nombreAtr = char.ToUpper(atr.Nombre.ToLower()[0]) + atr.Nombre.ToLower().Substring(1);
				WriteLine("\t\t\t\t<tr><td style='color:#000000;font-family:Arial;'>"+ nombreAtr +": <input type='text' id='"+ atr.Nombre +"'></td></tr>");
			}
			WriteLine("\t\t\t</table>");
			Write("\t\t\t<button style='color:#000000;font-family:Arial'> <a href=\"./"  + clase.NombreClase + textoEnriquecido +  "\">Guardar</a> </button>\n");
			Write("\t\t\t<button style='color:#000000;font-family:Arial'> <a href=\"./"  + clase.NombreClase + textoEnriquecido +  "\">Volver</a> </button>\n");
		}
		WriteLine("\t\t</form>");
		WriteLine("\t\t</div>");
		WriteLine("\t</body>");
		WriteLine("</html>");
	}
